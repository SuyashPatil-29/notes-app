# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_NAME=notesapp

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8080/auth/google/callback

# Session Configuration
# IMPORTANT: Generate a secure random key for production!
# Use at least 32 characters for security
# Example: openssl rand -base64 32
SESSION_SECRET=change-this-to-a-secure-random-string-at-least-32-chars

# Environment
# Set to "true" for production (enables secure cookies, etc.)
IsProd=false

# Server Configuration (Optional)
PORT=8080

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Recall.ai Configuration
# Get API key from: https://recall.ai/
RECALL_AI_API_KEY=your-recall-ai-api-key

# OpenAI Configuration
# Get API key from: https://platform.openai.com/
OPENAI_API_KEY=your-openai-api-key

# Webhook Configuration
# URL where Recall.ai will send webhook notifications
# For development: use ngrok or similar to expose localhost
# For production: use your actual domain
RECALL_WEBHOOK_URL=https://your-domain.com/webhooks/recall
RECALL_WEBHOOK_SECRET=your-webhook-secret-for-signature-verification

# WhatsApp Cloud API Configuration
# Get these from: https://developers.facebook.com/apps/
# 1. Create a Meta/Facebook App
# 2. Add WhatsApp product to your app
# 3. Get your Phone Number ID from WhatsApp > API Setup
# 4. Get your Business Account ID from WhatsApp > Getting Started
# 5. Generate a permanent access token from System Users
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id
WHATSAPP_ACCESS_TOKEN=your-permanent-whatsapp-access-token
WHATSAPP_APP_SECRET=your-facebook-app-secret
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-custom-verify-token-for-webhook-setup

# WhatsApp API Configuration (Optional - defaults provided)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_CONTEXT_EXPIRATION=10
WHATSAPP_RATE_LIMIT_PER_MINUTE=10

# WhatsApp Audit Configuration (Optional - defaults provided)
# Number of days to retain audit logs before cleanup
WHATSAPP_AUDIT_RETENTION_DAYS=90
# How often to run cleanup job (in hours)
WHATSAPP_AUDIT_CLEANUP_INTERVAL_HOURS=24